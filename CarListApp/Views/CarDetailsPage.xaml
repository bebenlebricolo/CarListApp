<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarListApp.Views.CarDetailsPage"
             xmlns:viewmodel="clr-namespace:CarListApp.ViewModels"
             xmlns:model="clr-namespace:CarListApp.Models"
             x:DataType="viewmodel:CarDetailsViewModel"
             Title="Car details">
    <VerticalStackLayout>
        <HorizontalStackLayout VerticalOptions="Center" 
                               HorizontalOptions="Center">
            <Label Text="{Binding Car.Make}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Label Text="{Binding Car.Model}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>